<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/llInfoOfEnterprise"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="@drawable/square_grey">

            <TextView
                android:id="@+id/tvNoOfTrainingEditview"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAppTheme"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@color/colorWhite"
                android:textSize="18dp"
                android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/llGoneToTraining"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/llSubject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtTitleSubjectEditView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/strSubject"
                    android:textColor="@color/colorGrayLight" />

                <EditText
                    android:id="@+id/etSubjectTrainingEditview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/square_grey"
                    android:inputType="textCapSentences"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/colorAppTheme"
                    android:textSize="16dp" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/llInstitute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/strInstitute"
                    android:textColor="@color/colorGrayLight" />

                <EditText
                    android:id="@+id/etInstituteTrainingEditview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/square_grey"
                    android:inputType="textCapSentences"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/colorAppTheme"
                    android:textSize="16dp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/llDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/strSelectDuration"
                    android:textColor="@color/colorGrayLight" />

                <EditText
                    android:id="@+id/etDurationTrainingEditview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/square_grey"
                    android:clickable="true"
                    android:editable="false"
                    android:focusableInTouchMode="false"
                    android:inputType="text"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:drawableRight="@drawable/drop_down"
                    android:textColor="@color/colorAppTheme"
                    android:textSize="16dp" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/llLearning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/strLearning"
                    android:textColor="@color/colorGrayLight" />

                <EditText
                    android:id="@+id/etLearningTrainingEditview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/square_grey"
                    android:inputType="text"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/colorAppTheme"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/txtCacelTrainingEditView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/strCancel"
                    android:background="@color/colorButton"
                    android:textColor="@color/colorWhite"
                    android:textSize="16dp"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:layout_margin=".5dp"/>
                <TextView
                    android:id="@+id/txtDeleteTrainingEditView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/strDelete"
                    android:background="@color/colorButton"
                    android:textColor="@color/colorWhite"
                    android:textSize="16dp"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:layout_margin=".5dp"/>
                <TextView
                    android:id="@+id/txtUpdateTrainingEditView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/strUpdate"
                    android:background="@color/colorButton"
                    android:textColor="@color/colorWhite"
                    android:textSize="16dp"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:layout_margin=".5dp"/>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
