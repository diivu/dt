<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/txtTitleEnterpriseName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:text="@string/strEnterpriseName"
                android:textColor="@color/colorGrayLight"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/edtEnterpriseName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/square_border_app_color"
                android:inputType="phone"
                android:padding="10dp"
                android:singleLine="true"
                android:editable="false"
                android:focusable="false"
                android:textColor="@color/colorAppTheme"
                android:textColorHint="@color/colorGrayUltraLight"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/txtTitleStatus"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:text="@string/strEnterpriseStatus"
                android:textColor="@color/colorGrayLight"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/edtStatus"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/square_border_app_color"
                android:clickable="true"
                android:drawableRight="@drawable/drop_down"
                android:editable="false"
                android:focusable="false"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/colorAppTheme"
                android:textColorHint="@color/colorGrayUltraLight"
                android:textSize="16dp" />



            <TextView
                android:id="@+id/txtTitleTurnOver"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:text="@string/strEnterpriseTurnover"
                android:textColor="@color/colorGrayLight"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/edtTurnOver"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/square_border_app_color"
                android:padding="10dp"
                android:maxLength="9"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@color/colorAppTheme"
                android:textColorHint="@color/colorGrayUltraLight"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/txtTitlePeopleEmployed"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:text="@string/strEnterprisePeopleEmploye"
                android:textColor="@color/colorGrayLight"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/edtPeopleEmployed"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/square_border_app_color"
                android:maxLength="3"
                android:inputType="number"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/colorAppTheme"
                android:textColorHint="@color/colorGrayUltraLight"
                android:textSize="16dp" />
            <TextView
                android:id="@+id/txtTitleCapitalDeployed"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:text="@string/strEnterpriseCapitalDeployed"
                android:textColor="@color/colorGrayLight"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/edtCapitalDeployed"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/square_border_app_color"
                android:maxLength="9"
                android:inputType="number"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/colorAppTheme"
                android:textColorHint="@color/colorGrayUltraLight"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/txtTitleProfit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:text="@string/strEnterpriseProfit"
                android:textColor="@color/colorGrayLight"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/edtProfit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/square_border_app_color"
                android:maxLength="9"
                android:inputType="number"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/colorAppTheme"
                android:textColorHint="@color/colorGrayUltraLight"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/txtTitleReturnOnInvestment"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:text="@string/strEnterpriseReturnOnInvestment"
                android:textColor="@color/colorGrayLight"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/edtReturnOnInvestment"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/square_border_app_color"
                android:inputType="phone"
                android:editable="false"
                android:focusable="false"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/colorAppTheme"
                android:textColorHint="@color/colorGrayUltraLight"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/txtTitleProfitAsPercentage"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:text="@string/strEnterpriseProfitAsPercentage"
                android:textColor="@color/colorGrayLight"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/edtProfitAsPercentage"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/square_border_app_color"
                android:inputType="phone"
                android:editable="false"
                android:focusable="false"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/colorAppTheme"
                android:textColorHint="@color/colorGrayUltraLight"
                android:textSize="16dp" />


            <TextView
                android:id="@+id/txtSubmitData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:singleLine="true"
                android:textAlignment="center"
                android:background="@color/colorButton"
                android:text="@string/strSubmitData"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorGrayUltraLight"
                android:textSize="16dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>