<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/llInfoOfEnterprise"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/square_grey"
        android:layout_margin="5dp">


            <TextView
                android:id="@+id/tvNoOfWorkExperienceEditView"
                android:background="@color/colorAppTheme"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="18dp"
                android:padding="10dp"
                android:textStyle="bold" />



        <LinearLayout
            android:id="@+id/llGoneToWorkExperience"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/llNameOfOrganisation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtTitleNameOfOrganisation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/strNameOfOrganisation"
                    android:textColor="@color/colorGrayLight" />

                <EditText
                    android:id="@+id/edtNameOfOrganisationWorkEditView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/square_grey"
                    android:inputType="textCapSentences"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/colorAppTheme"
                    android:textSize="16dp" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/llDesignation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/strDesignation"
                    android:textColor="@color/colorGrayLight" />

                <EditText
                    android:id="@+id/edtDesignationWorkEditView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/square_grey"
                    android:inputType="text"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/colorAppTheme"
                    android:textSize="16dp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/llJobProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/strJobProfile"
                    android:textColor="@color/colorGrayLight" />

                <EditText
                    android:id="@+id/edtJobProfileWorkEditView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/square_grey"
                    android:inputType="text"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/colorAppTheme"
                    android:textSize="16dp" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/llDuration_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/strTitleDuration"
                    android:textColor="@color/colorGrayLight" />

                <EditText
                    android:id="@+id/edtDurationWorkEditView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/square_grey"
                    android:inputType="number"
                    android:padding="10dp"
                    android:maxEms="3"
                    android:maxLength="3"
                    android:singleLine="true"
                    android:textColor="@color/colorAppTheme"
                    android:textSize="16dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/txtCacelWorkExperienceEditView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/strCancel"
                    android:background="@color/colorButton"
                    android:textColor="@color/colorWhite"
                    android:textSize="16dp"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:layout_margin=".5dp"/>
                <TextView
                    android:id="@+id/txtDeleteWorkExperienceEditView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/strDelete"
                    android:background="@color/colorButton"
                    android:textColor="@color/colorWhite"
                    android:textSize="16dp"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:layout_margin=".5dp"/>
                <TextView
                    android:id="@+id/txtUpdateWorkExperienceEditView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/strUpdate"
                    android:background="@color/colorButton"
                    android:textColor="@color/colorWhite"
                    android:textSize="16dp"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:layout_margin=".5dp"/>
            </LinearLayout>



        </LinearLayout>


    </LinearLayout>


</LinearLayout>
