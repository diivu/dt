<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeItemClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtEnterpriseName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/colorBlack"
                android:drawablePadding="10dp"
                android:text="Geeta's Kitchen"
                android:textSize="18dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txtEnterpreneurName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/colorGrayDark"
                android:drawablePadding="10dp"
                android:text="Ketan R. Lambhiya"
                android:textStyle="bold"
                android:textSize="14dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtStartingDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Starting Date : 27/05/1990"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorGrayLight"
                    android:layout_centerInParent="true"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:id="@+id/txtTrackEnterprise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Track Enterprise"
                    android:textSize="12dp"
                    android:textAlignment="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:layout_gravity="right"
                    android:textColor="@color/colorWhite"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"
                    android:background="@drawable/round_corner_button_color"
                    />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/relativeItemClick"
        android:background="@color/colorGrayVeryLight"/>

</RelativeLayout>