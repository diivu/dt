<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="25dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/strTitleSelectVillage"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/colorAppTheme"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/txtTitleSelectVillage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="left"
            android:text="@string/strTitleSelectVillage"
            android:textColor="@color/colorGrayLight"
            android:textSize="14dp"
            />

        <EditText
            android:id="@+id/edtSelectVillage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/square_border_app_color"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/colorAppTheme"
            android:textColorHint="@color/colorGrayUltraLight"
            android:drawableRight="@drawable/drop_down"
            android:textSize="16dp"
            android:clickable="true"
            android:editable="false"
            android:focusable="false"
            />

        <TextView
            android:id="@+id/txtNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_corner_button_color"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:text="@string/strNext"
            android:textAlignment="center"
            android:layout_gravity="end"
            android:textColor="@color/colorWhite"
            android:textSize="15dp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>