<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/square_grey">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/llInfoOfMachinariesEditview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtSrNoManchineryEditView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorAppTheme"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textColor="@color/colorWhite"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imgEditViewEditview"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:padding="5dp"
                    android:src="@drawable/edit_icn"
                    android:visibility="gone"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llGoneToMachinaryEditview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linearMachineryEditview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtTitlePerticulareEditView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/strParticulars"
                        android:textColor="@color/colorGrayLight" />

                    <EditText
                        android:id="@+id/edtParticularsManchineryEditview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/square_grey"
                        android:inputType="textCapSentences"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="@color/colorAppTheme"
                        android:textSize="16dp" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/llMachinNosEditview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtTitleMachineNumberEditview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/strMachinNos"
                        android:textColor="@color/colorGrayLight" />

                    <EditText
                        android:id="@+id/edtMachinNosManchineryEditview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/square_grey"
                        android:inputType="number"
                        android:maxLength="4"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="@color/colorAppTheme"
                        android:textSize="16dp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/llPrice_Editview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtTitlePerUnitPriceEditview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/strPerUnitPrice"
                        android:textColor="@color/colorGrayLight" />

                    <EditText
                        android:id="@+id/edtPriceManchineryEditview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/square_grey"
                        android:inputType="number"
                        android:maxLength="5"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="@color/colorAppTheme"
                        android:textSize="16dp" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/llAmountinRsEditview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtTitleTotalAmountEditview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/strTotalAmount"
                        android:textColor="@color/colorGrayLight" />

                    <EditText
                        android:id="@+id/edtAmountinRsManchineryEditview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/square_grey"
                        android:clickable="false"
                        android:editable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="number"
                        android:padding="10dp"
                        android:maxLength="15"
                        android:singleLine="true"
                        android:textColor="@color/colorAppTheme"
                        android:textSize="16dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llPurchaseDateEditview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtTitlePurchaseDateEditview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/strPurchaseDate"
                        android:textColor="@color/colorGrayLight" />

                    <EditText
                        android:id="@+id/edtPurchaseDateManchineryEditview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/square_grey"
                        android:clickable="true"
                        android:editable="false"
                        android:focusableInTouchMode="false"
                        android:padding="10dp"
                        android:maxLength="15"
                        android:singleLine="true"
                        android:textColor="@color/colorAppTheme"
                        android:textSize="16dp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/llExpectedLifeEditview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtTitleExpectedLifeEditview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/strExpectedLife"
                        android:textColor="@color/colorGrayLight" />

                    <EditText
                        android:id="@+id/edtExpectedLifeManchineryEditview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/square_grey"
                        android:inputType="number"
                        android:maxLength="2"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="@color/colorAppTheme"
                        android:textSize="16dp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llPerAnnumEditview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtTitleScrapValueEditview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/strPerAnnum"
                        android:textColor="@color/colorGrayLight" />

                    <EditText
                        android:id="@+id/edtScrapValueManchineryEditview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/square_grey"
                        android:inputType="number"
                        android:maxLength="5"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="@color/colorAppTheme"
                        android:textSize="16dp" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/llDepreciationEditview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtTitleDepriciatedCalEditview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/strDepriciatedCal"
                        android:textColor="@color/colorGrayLight" />

                    <EditText
                        android:id="@+id/edtDepreciationManchineryEditview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/square_grey"
                        android:clickable="false"
                        android:editable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="text"
                        android:maxLength="15"
                        android:padding="10dp"
                        android:textColor="@color/colorAppTheme"
                        android:textSize="16dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llBookValueEditview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtTitleBookValueEditview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/strBookValue"
                        android:textColor="@color/colorGrayLight" />

                    <EditText
                        android:id="@+id/edtBookValueManchineryEditview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/square_grey"
                        android:clickable="false"
                        android:editable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="text"
                        android:padding="10dp"
                        android:maxLength="15"
                        android:singleLine="true"
                        android:textColor="@color/colorAppTheme"
                        android:textSize="16dp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/llSuppliersNameEditview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtTitleSuppllierNameEditview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/strSuppliersName"
                        android:textColor="@color/colorGrayLight" />

                    <EditText
                        android:id="@+id/edtSuppliersNameManchineryEditview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/square_grey"
                        android:inputType="textMultiLine"
                        android:minLines="3"
                        android:padding="10dp"
                        android:textColor="@color/colorAppTheme"
                        android:textSize="16dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lltaxTransInRsEditview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtTitleTransInRsEditview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="false"
                        android:text="@string/strTaxTransInRs"
                        android:textColor="@color/colorGrayLight" />

                    <EditText
                        android:id="@+id/edtTaxTransInRsManchineryEditview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/square_grey"
                        android:inputType="number"
                        android:maxLength="8"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="@color/colorAppTheme"
                        android:textSize="16dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llElectrificationInRsEditview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtTitleElectrificationEditview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="false"
                        android:text="@string/strElectrificationInRs"
                        android:textColor="@color/colorGrayLight" />

                    <EditText
                        android:id="@+id/edtElectrificationInRsManchineryEditview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/square_grey"
                        android:inputType="number"
                        android:maxLength="8"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="@color/colorAppTheme"
                        android:textSize="16dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearQuotationEditview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:visibility="gone">


                    <TextView
                        android:id="@+id/txtUploadMoMApprovedViewManchineryEditview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/strUploadQuotation"
                        android:textColor="@color/colorGrayLight" />

                    <TextView
                        android:id="@+id/txtUploadQuotationManchineryEditview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/square_grey"
                        android:padding="10dp"
                        android:textSize="18sp" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/txtCancelEditView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/strCancel"
                        android:background="@color/colorButton"
                        android:textColor="@color/colorWhite"
                        android:textSize="16dp"
                        android:padding="10dp"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:layout_margin=".5dp"/>
                    <TextView
                        android:id="@+id/txtDeleteEditView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/strDelete"
                        android:background="@color/colorButton"
                        android:textColor="@color/colorWhite"
                        android:textSize="16dp"
                        android:padding="10dp"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:layout_margin=".5dp"/>
                    <TextView
                        android:id="@+id/txtUpdateEditView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/strUpdate"
                        android:background="@color/colorButton"
                        android:textColor="@color/colorWhite"
                        android:textSize="16dp"
                        android:padding="10dp"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:layout_margin=".5dp"/>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>
