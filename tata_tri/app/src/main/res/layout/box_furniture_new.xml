<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/square_grey">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/llInfoOfMachinaries"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvNoOfEducationFurniture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@color/colorAppTheme"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textColor="@color/colorWhite"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imgEditViewFurniture"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:padding="5dp"
                    android:src="@drawable/edit_icn" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llGoneToMachinary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llParticulars_"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtTitleParticularFurniture"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/strParticulars"
                        android:textColor="@color/colorGrayLight" />

                    <EditText
                        android:id="@+id/etParticularsFurniture"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/square_grey"
                        android:inputType="textCapSentences"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="@color/colorAppTheme"
                        android:textSize="16dp"
                        android:maxLength="30"/>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/llMachinNos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtTitleMachineNumberFurniture"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/strMachinNos"
                        android:textColor="@color/colorGrayLight" />

                    <EditText
                        android:id="@+id/etMachinNosFurniture"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/square_grey"
                        android:inputType="number"
                        android:maxLength="4"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="@color/colorAppTheme"
                        android:textSize="16dp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/llPrice_"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtTitlePerUnitPriceFurniture"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/strPerUnitPrice"
                        android:textColor="@color/colorGrayLight" />

                    <EditText
                        android:id="@+id/etPriceFurniture"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/square_grey"
                        android:inputType="number"
                        android:maxLength="5"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="@color/colorAppTheme"
                        android:textSize="16dp" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/llAmountinRs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtTitleAmountInRSFurniture"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/strAmount"
                        android:textColor="@color/colorGrayLight" />

                    <EditText
                        android:id="@+id/etAmountinRsFurniture"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/square_grey"
                        android:clickable="false"
                        android:editable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="number"
                        android:maxLength="15"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="@color/colorAppTheme"
                        android:textSize="16dp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/llPurchaseDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtTitlePurchaseDateFurniture"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/strPurchaseDate"
                        android:textColor="@color/colorGrayLight" />

                    <EditText
                        android:id="@+id/etPurchaseDateFurniture"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/square_grey"
                        android:clickable="true"
                        android:editable="false"
                        android:focusableInTouchMode="false"
                        android:padding="10dp"
                        android:maxLength="15"
                        android:singleLine="true"
                        android:textColor="@color/colorAppTheme"
                        android:textSize="16dp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/llExpectedLife"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtTitleExpectedLifeFurniture"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/strExpectedLife"
                        android:textColor="@color/colorGrayLight" />

                    <EditText
                        android:id="@+id/etExpectedLifeFurniture"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/square_grey"
                        android:inputType="number"
                        android:maxLength="2"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="@color/colorAppTheme"
                        android:textSize="16dp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llPerAnnum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtTitleScrapValueFurniture"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/strPerAnnum"
                        android:textColor="@color/colorGrayLight" />

                    <EditText
                        android:id="@+id/etScrapValueFurniture"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/square_grey"
                        android:inputType="numberDecimal"
                        android:maxLength="5"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="@color/colorAppTheme"
                        android:textSize="16dp" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/llDepreciation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtTitleDepriciatedCalFurniture"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/strDepriciatedCal"
                        android:textColor="@color/colorGrayLight" />

                    <EditText
                        android:id="@+id/etDepreciationFurniture"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/square_grey"
                        android:clickable="false"
                        android:editable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="text"
                        android:maxLength="15"
                        android:padding="10dp"
                        android:textColor="@color/colorAppTheme"
                        android:textSize="16dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llBookValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtTitleBookValueFurniture"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/strBookValue"
                        android:textColor="@color/colorGrayLight" />

                    <EditText
                        android:id="@+id/etBookValueFurniture"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/square_grey"
                        android:clickable="false"
                        android:editable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="text"
                        android:padding="10dp"
                        android:maxLength="15"
                        android:singleLine="true"
                        android:textColor="@color/colorAppTheme"
                        android:textSize="16dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llSuppliersName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtTitleSuppllierNameFurniture"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/strSuppliersName"
                        android:textColor="@color/colorGrayLight" />

                    <EditText
                        android:id="@+id/etSuppliersNameFurniture"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/square_grey"
                        android:inputType="textMultiLine"
                        android:maxLines="3"
                        android:padding="10dp"
                        android:maxLength="150"
                        android:textColor="@color/colorAppTheme"
                        android:textSize="16dp" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linearFurnitureQuotations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/strUploadQuotation"
                        android:textColor="@color/colorGrayLight" />

                    <TextView
                        android:id="@+id/edtUploadQuotaionsFurniture"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/square_grey"
                        android:clickable="false"
                        android:editable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="textMultiLine"
                        android:padding="10dp"
                        android:maxLength="15"
                        android:textColor="@color/colorAppTheme"
                        android:textSize="16dp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
